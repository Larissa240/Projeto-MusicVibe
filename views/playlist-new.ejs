<h1>Criar Nova Playlist</h1>
<form action="/playlist" method="POST">
  <input type="text" name="nome" placeholder="Nome da playlist" required>
  <button type="submit">Criar</button>
</form>

<form method="POST" action="/playlist/<%= playlist.id %>/musicas">
  <input type="text" name="titulo" placeholder="Título da música" required>
  <input type="text" name="artista" placeholder="Artista" required>
  <input type="text" name="imagem" placeholder="URL da imagem"> <!-- este campo novo -->
  <button type="submit">Adicionar Música</button>
</form>

